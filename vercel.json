{
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "redirects": [
    { "source": "/blog/:path*", "destination": "/blog/:path*", "permanent": true },
    { "source": "/features/:path*", "destination": "/features/:path*", "permanent": true },
    { "source": "/pricing/:path*", "destination": "/pricing/:path*", "permanent": true },
    { "source": "/contact/:path*", "destination": "/contact/:path*", "permanent": true },
    { "source": "/refund", "destination": "/terms", "permanent": true },
    { "source": "/setup-guide", "destination": "/features", "permanent": true },
    { "source": "/troubleshooting", "destination": "/contact", "permanent": true },
    { "source": "/faq", "destination": "/features#faq", "permanent": true },
    { "source": "/packages", "destination": "/pricing", "permanent": true },
    { "source": "/services", "destination": "/features", "permanent": true },
    { "source": "/support", "destination": "/contact", "permanent": true },
    { "source": "/news", "destination": "/blog", "permanent": true }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; img-src 'self' data: https:; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://www.google-analytics.com https://www.googletagmanager.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' data: https://fonts.gstatic.com; connect-src 'self' https://www.google-analytics.com https://www.googletagmanager.com https://api.iptvservice.site;"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version"
        }
      ]
    }
  ]
}