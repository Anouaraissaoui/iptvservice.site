{
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "redirects": [
    { "source": "/blog/:path*", "destination": "/blog/:path*", "permanent": true },
    { "source": "/features/:path*", "destination": "/features/:path*", "permanent": true },
    { "source": "/pricing/:path*", "destination": "/pricing/:path*", "permanent": true },
    { "source": "/contact/:path*", "destination": "/contact/:path*", "permanent": true },
    { "source": "/refund", "destination": "/terms", "permanent": true },
    { "source": "/setup-guide", "destination": "/features", "permanent": true },
    { "source": "/troubleshooting", "destination": "/contact", "permanent": true },
    { "source": "/faq", "destination": "/features#faq", "permanent": true },
    { "source": "/packages", "destination": "/pricing", "permanent": true },
    { "source": "/services", "destination": "/features", "permanent": true },
    { "source": "/support", "destination": "/contact", "permanent": true },
    { "source": "/news", "destination": "/blog", "permanent": true }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, s-maxage=86400, stale-while-revalidate=31536000"
        },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" },
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "Permissions-Policy", "value": "camera=(), microphone=(), geolocation=(), payment=()" }
      ]
    },
    {
      "source": "/(.+\\.js)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.+\\.css)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/images/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/_next/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=60, stale-while-revalidate=600"
        }
      ]
    }
  ],
  "regions": ["sfo1", "iad1"],
  "cleanUrls": true,
  "trailingSlash": false
}
