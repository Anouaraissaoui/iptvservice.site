{
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "redirects": [
    { "source": "/blog/:path*", "destination": "/blog/:path*", "permanent": true },
    { "source": "/features/:path*", "destination": "/features/:path*", "permanent": true },
    { "source": "/pricing/:path*", "destination": "/pricing/:path*", "permanent": true },
    { "source": "/contact/:path*", "destination": "/contact/:path*", "permanent": true },
    { "source": "/refund", "destination": "/terms", "permanent": true },
    { "source": "/setup-guide", "destination": "/features", "permanent": true },
    { "source": "/troubleshooting", "destination": "/contact", "permanent": true },
    { "source": "/faq", "destination": "/features#faq", "permanent": true },
    { "source": "/packages", "destination": "/pricing", "permanent": true },
    { "source": "/services", "destination": "/features", "permanent": true },
    { "source": "/support", "destination": "/contact", "permanent": true },
    { "source": "/news", "destination": "/blog", "permanent": true }
  ],
  
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" },
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "Permissions-Policy", "value": "camera=(), microphone=(), geolocation=(), payment=()" },
        { "key": "Content-Security-Policy", "value": "default-src 'self' cdn.jsdelivr.net; img-src 'self' data: https:; script-src 'self' 'unsafe-inline' 'unsafe-eval' cdn.jsdelivr.net https://www.google-analytics.com https://www.googletagmanager.com; style-src 'self' 'unsafe-inline' cdn.jsdelivr.net https://fonts.googleapis.com; font-src 'self' data: cdn.jsdelivr.net https://fonts.gstatic.com; connect-src 'self' https://www.google-analytics.com https://www.googletagmanager.com https://api.iptvservice.site;" }
      ]
    },
    {
      "source": "/(.+\\.js)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" },
        { "key": "Content-Type", "value": "application/javascript; charset=utf-8" },
        { "key": "X-Content-Type-Options", "value": "nosniff" }
      ]
    },
    {
      "source": "/(.+\\.css)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" },
        { "key": "Content-Type", "value": "text/css; charset=utf-8" },
        { "key": "X-Content-Type-Options", "value": "nosniff" }
      ]
    },
    {
      "source": "/images/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" },
        { "key": "Content-Type", "value": "image/jpeg" }
      ]
    },
    {
      "source": "/fonts/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" },
        { "key": "X-Content-Type-Options", "value": "nosniff" }
      ]
    },
    {
      "source": "404.html",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" },
        { "key": "Status", "value": "404" }
      ]
    }
  ]
}
